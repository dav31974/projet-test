{% extends 'base.html.twig' %}

{% block title %}Projet test
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste des personnes</h1>
		<a class="btn btn-success btn-sm" href="{{ path('personne_create') }}">Ajouter une nouvelle personne</a>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom</th>
					<th scope="col">Date de naissance</th>
					<th scope="col">Taille (mètre)</th>
					<th scope="col">Nbre de frère(s) et soeur(s)</th>
					<th scope="col">Code postal</th>
					<th scope="col">Infos complémentaire</th>
				</tr>
			</thead>
			<tbody>
				{% for personne in personnes %}
					<tr class="table-active">
						<td>{{ personne.nom }}</td>
						<td>{{ personne.birthAt| date('d/m/Y')}}</td>
						<td>{{ personne.taille / 100 }}</td>
						<td>{{ personne.nbreFrereSoeur }}</td>
						<td>{{ personne.codePostal }}</td>
						<td>{{ personne.infos }}</td>

						<td>
							<a class="btn btn-primary btn-sm" href="{{ path('personne_edit', {'id': personne.id}) }}">Modifier</a>
						</td>
						<td>
							<a class="btn btn-danger btn-sm" href="{{ path('personne_delete', {'id': personne.id}) }}">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
